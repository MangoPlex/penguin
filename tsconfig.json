{
    "extends": "@sapphire/ts-config",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "tsBuildInfoFile": "build/.tsbuildinfo",
        "incremental": true,
        "skipLibCheck": true,
        "module": "ESNext"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}